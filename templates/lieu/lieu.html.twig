{% extends 'base.html.twig' %}

{% block title %}
    {{title}} | {{parent()}}
{% endblock %}

{% block body %}
    <h1 class="text-center">GÃ©rer les lieux</h1>
    <h2>Filtrer les lieux</h2>

    <div class="col-sm-10 col-md-8 col-lg-6 m-2 d-flex justify-content-around">
        {{form_start(formSearch)}}
        {{form_widget(formSearch.name, {'full_name': 'search','label':'Le nom contient :'})}}
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Rechercher</button>
        {{form_end(formSearch)}}


    </div>
    <div class="col-12 col-10   m-auto">
        <div class="box-table">
            <table class="table">
                <thead class="thead-light" >
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Rue</th>
                    <th scope="col">longitude</th>
                    <th scope="col">Latitude</th>
                    <th scope="col">ville</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {{form_start(formLieu)}}
                <tr>
                    <td>
                        {{form_widget(formLieu.nom)}}
                    </td>
                    <td>
                        {{form_widget(formLieu.rue)}}
                    </td>
                    <td>
                        {{form_widget(formLieu.longitude)}}
                    </td>
                    <td>
                        {{form_widget(formLieu.latitude)}}
                    </td>
                    <td>
                        {{form_widget(formLieu.ville)}}
                    </td>
                    <td>
                            <button type="submit" class="btn bg-4 btn-lg text-white f-lunatic btn-connexion mb-3 fs-6 add">Enregistrer</button>
                    </td>
                </tr>
                {{ form_end(formLieu)}}
                {% for lieu in lieux %}
                    <tr>
                        <td>{{lieu.nom}}</td>
                        <td>{{lieu.rue}}</td>
                        <td>{{lieu.longitude}}</td>
                        <td>{{lieu.latitude}}</td>
                        <td>{{lieu.ville}}</td>
                        <td><a href="{{path('lieu_modify',{'id':lieu.id})}}">Modifier</a> - <a href="{{path('lieu_delete',{'id':lieu.id})}}">Supprimer</a></td>
                    </tr>
                {% endfor%}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
