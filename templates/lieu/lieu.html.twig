{% extends 'base.html.twig' %}

{% block title %}
    {{title}} | {{parent()}}
{% endblock %}

{% block body %}
    <h1 class="text-center">GÃ©rer les lieux</h1>
    <h2>Filtrer les lieux</h2>

    <div class="col-sm-10 col-md-8 col-lg-6 m-2 d-flex justify-content-around">
        {{form_start(formSearch)}}
        {{form_widget(formSearch.name, {'full_name': 'search','label':'Le nom contient :'})}}
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Rechercher</button>
        {{form_end(formSearch)}}


    </div>
    <div class="container bg-dark text-light">
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Rue</th>
                <th scope="col">Latitude</th>
                <th scope="col">longitude</th>
                <th scope="col">ville</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieux %}
                <tr>
                    <td>{{lieu.nom}}</td>
                    <td>{{lieu.rue}}</td>
                    <td>{{lieu.longitude}}</td>
                    <td>{{lieu.latitude}}</td>
                    <td>{{lieu.ville}}</td>
                    <td></td>
                    <td><a href="{{path('lieu_modify',{'id':lieu.id})}}">Modifier</a> - <a href="{{path('lieu_delete',{'id':lieu.id})}}">Supprimer</a></td>
                </tr>
            {% endfor%}
            {{form_start(formLieu)}}
            <tr>
                <td>
                    {{form_row(formLieu.nom,{"label":"Nom de la ville"})}}
                </td>
                <td>
                    {{form_row(formLieu.rue,{"label":"Rue"})}}
                </td>
                <td>
                    {{form_row(formLieu.longitude,{"label":"Longitude"})}}
                </td>
                <td>
                    {{form_row(formLieu.latitude,{"label":"Latitude"})}}
                </td>
                <td>
                    {{form_row(formLieu.ville,{"label":"Ville"})}}
                </td>
                <td>
                    <button type="submit">{{ button }}</button>
                </td>
            </tr>
            {{ form_end(formLieu)}}
            </tbody>
        </table>
    </div>
{% endblock %}
