            {#            </div>#}

            {#            <div class="input-group mb-3">#}
            {#                <label class="input-group-text" for="???" >Le nom de la sortie contient</label>#}
            {#                    #}{# todo : formCampus#}
            {#            </div>#}

            <div class="d-flex flex-row flex-wrap justify-content-center">
                <div class="p-1">
                    <h2 class="fs-5">Filtrer les sorties</h2>

                    <div class="input-group mb-3">
                        <label class="input-group-text" for="site">Campus</label>
                        <select  id="site" class="custom-select col-lg-3">
                            <option></option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <label for="Contains" class="input-group-text">Le nom de la sortie contient</label>
                        <input type="search"  class="form-control" id="Contains">
                    </div>

                    <div class="input-group mb-3">
                        <label class="input-group-text" for="firstDate" >Entre le :</label>
                        <input type="date" class="form-control" id="firstDate">
                    </div>

                    <div class="input-group mb-3">
                        <label class="input-group-text" for="secondDate" >et le :</label>
                        <input type="date" class="form-control" id="secondDate">
                    </div>
                </div>
                <div  class="p-2 fs-5">
                    <div class="input-group mb-3 d-flex flex-column">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="event-orga">
                            <label class="form-check-label" for="event-orga">Sorties dont je suis l'organisateur.trice</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="event-inscrit">
                            <label class="form-check-label" for="event-inscrit">Sorties auxquelles je suis inscrit.e</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="event-desinscrit">
                            <label class="form-check-label" for="event-desinscrit">Sorties auxquelles je ne suis pas inscrit.e</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="event-passe">
                            <label class="form-check-label" for="event-passe">Sorties passée</label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn bg-4 btn-lg text-white f-lunatic btn-connexion">Recherche</button>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <div class="col-12 col-10   m-auto">
        <div class="box-table">
            <table class="table">
                <thead class="thead-light" >
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col" class="d-none d-md-table-cell">Clôture</th>
                    <th scope="col" class="d-none d-md-table-cell">Participants</th>
                    <th scope="col" class="d-none d-md-table-cell">Etat</th>
                    <th scope="col" class="d-none d-md-table-cell">Inscrit</th>
                    <th scope="col" class="d-none d-md-table-cell">Organisateur</th>
                    <th scope="col" class="d-none d-md-table-cell">Actions</th>
                    <th scope="col" class="d-md-none">Lieu</th>
                </tr>
                </thead>
                <tbody>
                {% for result in sorties%}
                    {{ include('includes/sortieComponent.html.twig') }}
                    {#                        {% if result.sortie.etat.libelle == 'En création' and app.user.id == result.sortie.organisateur.id %}#}
                    {#                            {{ include('includes/sortieComponent.html.twig') }}#}
                    {#                        {%endif%}#}
                    {#                        {% if result.sortie.etat.libelle != 'En création'  %}#}
                    {#                            {{ include('includes/sortieComponent.html.twig') }}#}
                    {#                        {%endif%}#}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <a class="btn bg-4 btn-lg text-white f-lunatic btn-connexion my-3" role="button" aria-pressed="true" href="{{path('sortie_create')}}">Créer une Sortie</a>
        </div>
    </div>
{% endblock %}

