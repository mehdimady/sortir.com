{% extends 'base.html.twig' %}

{% block title %} {{ title }} | {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="text-center">Gérer les participants</h1>
    <h2>Filtrer les participants</h2>

    <div class="col-sm-10 col-md-8 col-lg-6 m-2 d-flex justify-content-around">
        {{form_start(formSearch)}}
        {{form_widget(formSearch.name, {'full_name': 'search','label':'Le nom contient :'})}}
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Rechercher</button>
        {{form_end(formSearch)}}


    </div>
    <div class="container bg-dark text-light">
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">Telephone</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                    <td>{{participant.pseudo}}</td>
                    <td>{{participant.nom}}</td>
                    <td>{{participant.prenom}}</td>
                    <td>{{participant.email}}</td>
                    <td>{{participant.telephone}}</td>
                    <td><a href="">Désactiver</a> - <a href="{{ path('admin_delete',{'id':participant.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor%}
            </tbody>
        </table>
    </div>
    <div>
            {{ form_start(adminForm) }}
                {{ form_row(adminForm.pseudo) }}
                {{ form_row(adminForm.nom) }}
                {{ form_row(adminForm.prenom) }}
                {{ form_row(adminForm.telephone) }}
                {{ form_row(adminForm.email) }}
                {{ form_row(adminForm.plainPassword) }}
                {{ form_row(adminForm.campus) }}
                {{ form_row(adminForm.imageFile) }}

                <button type="submit" class="btn">Enregistrer</button>
            {{ form_end(adminForm) }}
    </div>
{% endblock %}
